@page "/UpdateCandidate/{CurrentId}"

<h3>UpdateCandidate</h3>
<hr />

<EditForm method="post" Model="candidate">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="modal-body container">
        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label for="name" class="control-label">Name</label>
                    <InputText id="name" class="form-control" @bind-value="@candidate.Name" />
                </div>
                <div class="form-group">
                    <label for="details" class="control-label">Details</label>
                    <TextArea Placeholder="details" class="form-control" @bind-value="@candidate.Details" />
                </div>
                <div class="form-group">
                    <label for="video" class="control-label">Video</label>
                    <InputText name="video" class="form-control" @bind-value="@candidate.Video" />
                </div>
                <div class="col-5">
                    <label for="imagesList" class="form-label">Hình ảnh</label>
                    <InputFile name="imagesList" OnChange="OnUpdateFile" multiple type="file" class="form-control"></InputFile>
                    <div class="d-flex align-items-center">
                        <span class="@(isChangeFile ? "d-none" : "d-block")">Hình ảnh</span>
                    </div>
                </div>

            </div>
        </div>
        <div class="modal-footer container">
            <input type="submit" class="btn btn-primary" @onclick="@Update" value="Update" />
            <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
        </div>
    </div>
</EditForm>
