@attribute [Route(Routes.NominationEdit)];
<div class="container">
    <div class="title mb-5 mt-4 text-center">Thêm/chỉnh sửa đề cử</div>
    <NominationForm />
    <div class="d-flex justify-content-between mb-5">
        <button @onclick="ShowConfirmPopUp" class="btn btn-add py-2 px-3">Thêm đề cử khác</button>
        <a href="@Routes.ListElection" class="btn btn-return py-2 px-3">Trở về cuộc bình chọn</a>
    </div>
</div>

@code {
    [CascadingParameter] public IModalService Modal { get; set; }
    private async Task ShowConfirmPopUp()
    {
        var options = new Blazored.Modal.ModalOptions()
        {
            HideCloseButton = true,
            DisableBackgroundCancel = true,
            UseCustomLayout = true,
        };

        Modal.Show<ConfirmPopUp>("", options);
    }
}
