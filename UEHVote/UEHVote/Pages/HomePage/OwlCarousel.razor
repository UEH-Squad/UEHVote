<div class="container">
    <h3 class="text">CÁC CUỘC BÌNH CHỌN <span class="yellow">ĐANG</span> DIỄN RA</h3>
    <div class="owl-carousel owl-theme">
        @if (elections is not null)
        {
            int i = 0;
            @foreach (var item in elections)
            {
                if (i < 10 && i<elections.Count)
                {
                    <div class="item px-2 py-3">
                        <img class="w-100" src="@item.Banner" />
                        <div class="item_content">
                            <h3 onclick="window.location.href='/chi-tiet-de-cu/@item.Id.ToString()'" style="cursor:pointer">@item.Name</h3>
                            <p>@item.Details</p>
                            <div class="d-flex justify-content-between">
                                <p class="content--left">Còn <span class="blue">@((item.FinishDate.Date-DateTime.Now.Date).Days)</span> ngày</p>
                                <p class="content--right"><span class="yellow">@IActivityVoteService.GetQuantityVoted(item,votes)</span> lượt bình chọn</p>
                            </div>                        
                        </div>
                    </div>
                    i++;
                }
            }
         }
    </div>
</div>

