@attribute [Route(Routes.DetailElection + "/{CurrentId}")];
@if (detailVoteViewModel != null)
{
    <section class="my-title">
        <div class="container">
            <h4>@detailVoteViewModel.Organization</h4>
            <h2>@detailVoteViewModel.Name</h2>
            <button class="m-auto">
                <p>@detailVoteViewModel.TotalVoted <span>lượt bình chọn</span></p>
            </button>
        </div>
    </section>
    <section class="my-poster @(isAct ? "d-block" : "d-none")">
        <img src="@detailVoteViewModel.Banner"/>
    </section>
    <section class="my-description">
        <div class="container">
            <h4>Mô tả đề cử</h4>
            <p>
                @(new MarkupString(detailVoteViewModel.Details))
            </p>
        </div>
    </section>
    <section class="my-img container ">
        <h4 class="my-4">Hình ảnh đề cử</h4>
        <div class="owl-carousel owl-theme">
            @if (isAct)
            {
                if (detailVoteViewModel.ActivityImages is not null)
                {
                    @foreach (var item in detailVoteViewModel.ActivityImages)
                    {
                        <div class="item px-2">
                            <img class="w-100" src="@item.Url"/>
                        </div>
                    }
                }
            }
            else
            {
                if (detailVoteViewModel.CandidateImages is not null)
                {
                    foreach (var item in detailVoteViewModel.CandidateImages)
                    {
                        <div class="item px-2">
                            <img class="w-100" src="@item.Url"/>
                        </div>
                    }
                }
            }
        </div>
    </section>
    <section class="my-video">
        <div class="container">
            <h4>Video về đề cử</h4>
            <iframe class="w-100" height="730" src="@detailVoteViewModel.Video" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <div class="text-end my-5">
                <a href="@Routes.RankPage/@(detailVoteViewModel.ElectionId!=0?detailVoteViewModel.ElectionId:CurrentId)" class="btn-rankPage btn">Xem bảng xếp hạng</a>
            </div>
        </div>
    </section>
}
