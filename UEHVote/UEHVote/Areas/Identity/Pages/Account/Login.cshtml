@page "/dang-nhap"
@model LoginModel

@{
    ViewData["Title"] = "";
}
<div class="login w-100 d-flex flex-row justify-content-center" >
    <h1>@ViewData["Title"]</h1>
    
        <section class="w-50">
            <form id="account" method="post">
                <h1 class="text-center mb-4"><span class="text-warning">UEH</span><span class="text-primary">Vote</span></h1>
                <div class="form">
                    <div class="form__text ">
                        <span class="text-primary">Login</span>
                    </div>
                </div>                
                
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group my-4 form__input__text">   
                    <span class="input__text__icon material-icons-outlined">
                        perm_identity
                    </span>
                    <input  asp-for="Input.Email" class="form-control text-center" placeholder="Tên đăng nhập" >                                         
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group my-4 form__input__password">  
                    <span class="input__password__icon material-icons-outlined">
                        lock
                    </span>
                    <input asp-for="Input.Password" class="form-control text-center" placeholder="Mật khẩu" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-between">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                        </p>
                    </div>
                    
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                </div>
            </form>
        </section>
    
</div>

@section Styles {
    <link href="@Url.Content("~/css/IdentityCss/login.css")" rel="stylesheet" type="text/css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
